{
    "name": "node-ts-template",
    "version": "0.1.0",
    "description": "A template for Node.js express app with TypeScript",
    "scripts": {
        "build": "npm run lint && tsc",
        "debug": "npm run build && nodemon --inspect dist/server.js",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "node dist/server.js",
        "test": "jest --forceExit --coverage --verbose"
    },
    "dependencies": {
        "@cider/logger": "^1.0.4",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "lodash": "^4.17.20",
        "mongoose": "^5.11.9",
        "pg": "^8.5.1",
        "sequelize": "^6.4.0",
        "socket.io": "^3.1.0",
        "swagger-express-middleware": "^4.0.2",
        "swagger-ui-express": "^4.1.6",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.33",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.9",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.11",
        "@types/jest": "^24.0.23",
        "@types/lodash": "^4.14.167",
        "@types/node": "^12.19.15",
        "@types/socket.io": "^2.1.12",
        "@types/supertest": "^2.0.8",
        "@types/swagger-express-middleware": "^1.0.10",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.10.2",
        "tslib": "^2.1.0",
        "typescript": "^3.9.7"
    }
}
